extends layout
block content
  nav.navbar
    div.logo
      a(href="/") My Shop
    ul.nav-links
      li
        a(href="/catalog/items") Products
      
      li
        a(href="/catalog/cart") Cart  
        span#cartCount #{count}
      li
        a(href="/login") Login

  .item-detail-container
    img.item-picture(src=item.image alt=item.title referrerpolicy="no-referrer")
    .item-info-container
      h1 #{title}
      h2 Price: $#{item.price}
      form.qty-form(action="", method="POST")
        input(type="hidden" name="productId" value=item._id)
        label(for="quantity") Quantity:
        input#quantity(type="number" name="quantity" min="1" value="1")
        button(type="submit") Add to Cart
